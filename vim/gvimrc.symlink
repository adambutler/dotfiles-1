if has("gui_macvim") && has("gui_running")
  " Make the default font bigger.
  set guifont=Menlo:h13

  " CtrlP OS-X Menu remapping
  macmenu &File.New\ Tab key=<D-S-t>
  map <D-t> :CtrlP<CR>
  imap <D-t> <ESC>:CtrlP<CR>

  " Hide MacVim menubar
  set guioptions-=T

  " Hide MacVim scrollbar
  set guioptions-=r
  set guioptions-=L

  " Ack with Cmd-F
  macmenu &Edit.Find.Find\.\.\. key=<D-S-f>
  map <D-f> :Ack!<SPACE>
  imap <D-f> <ESC>:Ack!<SPACE>
endif
