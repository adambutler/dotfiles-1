alias l='ls'
alias ls='ls -FG'
alias ll='ls -lh'
alias la='ls -lAh'
alias lh='ls -ldF .*' # list hidden files only
alias ..='cd ..;' # can then do .. .. .. to move up multiple directories.
alias ...='.. ..'
alias b='cd -'
alias c='clear' # shortcut to clear your terminal

alias g='grep -i'  #case insensitive grep
alias h='history|g'
alias ducks='du -cks * | sort -rn|head -11' # Lists the size of all the folders
alias top='top -o cpu'

# OS X specifics
alias m='mate .'
alias o='open .'
alias pubkey='cat ~/.ssh/*.pub | pbcopy && echo "Keys copied to clipboard"'
# replacement netstat cmd to find ports used by apps on OS X
alias netstat="sudo lsof -i -P"

# check for node and create js-repl if it's available
command -v node-repl > /dev/null && command -v rlwrap > /dev/null && alias js='rlwrap node-repl'

# Source and edit profile
alias sprof='source ~/.bash_profile'
alias eprof="mate ~/Code/DotFiles/"

# useful command to find what you should be aliasing:
alias profileme="history | awk '{print \$2}' | awk 'BEGIN{FS=\"|\"}{print \$1}' | sort | uniq -c | sort -n | tail -n 20 | sort -nr"

# Turns man pages into pdfs
function manpdf() { man -t $@ | open -f -a Preview; }

# Easy extraction
function extract() {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1        ;;
            *.tar.gz)    tar xvzf $1     ;;
            *.bz2)       bunzip2 $1       ;;
            *.rar)       unrar x $1     ;;
            *.gz)        gunzip $1     ;;
            *.tar)       tar xvf $1        ;;
            *.tbz2)      tar xvjf $1      ;;
            *.tgz)       tar xvzf $1       ;;
            *.zip)       unzip $1     ;;
            *.Z)         uncompress $1  ;;
            *.7z)        7z x $1    ;;
            *)           echo "'$1' cannot be extracted via >extract<" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
